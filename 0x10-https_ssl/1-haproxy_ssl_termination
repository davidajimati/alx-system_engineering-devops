global
    log /dev/log    local0
    log /dev/log    local1 notice
    chroot /var/lib/haproxy
    stats socket /run/haproxy/admin.sock mode 660 level admin expose-fd listeners
    stats timeout 30s
    user haproxy
    group haproxy
    daemon

defaults
    log global
    mode http
    option httplog
    option dontlognull
    timeout connect 5000
    timeout client 50000
    timeout server 50000

frontend http-in
    bind *:443 ssl crt /etc/letsencrypt/live/www.matis.tech/fullchain.pem key /etc/letsencrypt/live/www.matis.tech/privkey.pem
    bind *:80
    default_backend servers

backend servers
    balance roundrobin
    server web-01 18.207.141.82:80 check
    server web-02 34.227.101.66:80 check
